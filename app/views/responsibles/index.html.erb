<p id="notice"><%= notice %></p>

<h4>Responsáveis</h4>
<%= link_to 'Novo Responsável',new_responsible_path, class: 'waves-effect waves-light btn-small blue'%>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responsibles.each do |responsible| %>
      <tr>
        <td><%=  responsible.name %></td>
        <td><%= link_to 'Editar', edit_responsible_path(responsible) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

