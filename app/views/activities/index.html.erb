<p id="notice"><%= notice %></p>

<h1>Ações</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Ticket</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.description %></td>
        <td><%= activity.date %></td>
        <td><%= link_to 'Mostrar', activity %></td>
        <td><%= link_to 'Editar', edit_activity_path(activity) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

