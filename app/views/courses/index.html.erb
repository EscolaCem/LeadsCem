<p id="notice"><%= notice %></p>

<h4>Curso</h4>
<%= link_to 'Novo Curso',new_course_path, class: 'waves-effect waves-light btn-small blue'%>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'Editar', edit_course_path(course) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
