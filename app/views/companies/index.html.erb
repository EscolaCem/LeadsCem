<p id="notice"><%= notice %></p>

<h4>Unidades</h4>
<% if current_user && (current_user.superadmin?)%>
  <% else controller.redirect_to root_path %>
        <% end %>
<%= link_to 'Nova Unidade',new_company_path, class: 'waves-effect waves-light btn-small blue'%>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= link_to 'Editar', edit_company_path(company) %></td>

      <tr>
    <% end %>
  </tbody>
</table>

